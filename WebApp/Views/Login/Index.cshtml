@model bool

<br />
<div class="container">
    <div class="col-md-offset-2 col-md-8 col-lg-8 col-lg-offset-2 col-sm-8 col-sm-offset-2">
        <div class="panel" style="border: 1px solid lightgray;">
            <div class="panel-body">
                <h2 style="color:darkblue">Log In</h2>
                @if (Model)
                {
                    <div class="alert alert-danger">
                        <strong>Login Failed!</strong>
                    </div>
                }
                <form class="form-horizontal row" asp-controller="Login" asp-action="CheckCreds" method="post">
                    <div class="form-group">
                        <label class="control-label col-md-3">Email:</label>
                        <input type="email" name="email" class="form-control col-md-6" />
                    </div>
                    <div class="form-group row">
                        <label class="control-label col-md-3">Password:</label>
                        <input type="password"  name="password" class="form-control col-md-6" />
                    </div>
                    <div class="form-group row">
                        <label class="control-label "></label>
                        <div class="col-md-2 col-md-offset-1">
                            <button type="submit" class="btn btn-primary btn-block" style="background-color:darkblue">Log In</button>
                        </div>
                        <div class="col-md-2">
                            <a href="/Register" class="btn btn-info btn-block">Register</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>


